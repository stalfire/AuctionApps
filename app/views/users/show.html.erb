<body id="user_show_main">
	<div class="frame">
	  <div class="center">
	    
			<div class="profile">
				<div class="image">
					<div class="circle-1"></div>
					<div class="circle-2"></div>
					<%if @user.check_avatar %>
						<%= image_tag @user.avatar%>
					<%else%>
						<%= image_tag "https://s3-ap-southeast-1.amazonaws.com/stalfire/5222813300aeedfaa9d85eacab199d32--fondant-recipes-frosting-recipes.jpg"%>
					<%end%>	
				</div>
				
				<div class="name"><%= @user.name %></div>
				<div class="email"><%= @user.email %></div>
				
				<div class="actions">
					<%if current_user != nil %>
						<%if @user.id == current_user.id%>
							<p class="btn"><%= link_to "Make Payment", braintree_new_path %></p>
							<p class="btn"><%= link_to "Edit Profile", edit_user_path(current_user.id),{id:"edit_profile_button"} %></p>
							<p class="btn"><%= link_to "Delivery Address", map_path,{id:"edit_profile_button"} %></p>
						<%elsif @user.id != current_user.id%>
							<p class="btn"><%= link_to "Auction Items", auctions_path(user_id: @user.id) %></p>
						<%end%>
					<%else%>
						<p class="btn"><%= link_to "Auction Items", auctions_path(user_id: @user.id) %></p>
					<%end%>
				</div>
			</div>
			
			
	  </div>
	</div>
</body>


