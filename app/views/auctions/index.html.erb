<body class="auction-body">
<div>
	<div class="flex-container">
	    <div class="category">
	        <%=link_to (image_tag "https://s3-ap-southeast-1.amazonaws.com/stalfire/other.png",{class:"category_image"}),auctions_path(category:"House")%> 
	        <h4> House </h4>
	    </div>

	    <div class="category">
	        <%=link_to (image_tag "https://s3-ap-southeast-1.amazonaws.com/stalfire/other.png",{class:"category_image"}),auctions_path(category:"Vehicle")%>
	        <h4> Vehicle </h4>
	    </div>

	    <div class="category">
	        <%=link_to (image_tag "https://s3-ap-southeast-1.amazonaws.com/stalfire/other.png",{class:"category_image"}),auctions_path(category:"Electronics")%> 
	       <h4> Electronics </h4>
	    </div>

	    <div class="category">
	        <%=link_to (image_tag "https://s3-ap-southeast-1.amazonaws.com/stalfire/other.png",{class:"category_image"}),auctions_path(category:"Sport")%>
	        <h4> Sport </h4>
	    </div>

	    <div class="category">
	        <%=link_to (image_tag "https://s3-ap-southeast-1.amazonaws.com/stalfire/other.png",{class:"category_image"}),auctions_path(category:"Clothing")%> 
	        <h4> Clothing </h4>
	    </div>

	    <div class="category">
	        <%=link_to (image_tag "https://s3-ap-southeast-1.amazonaws.com/stalfire/other.png",{class:"category_image"}),auctions_path(category:"Other")%>
	        <h4> Other </h4>
	    </div>
	</div>
	<hr class="line_style">
	<div id="auction-index-wrapper">
		<% @auctions.each do |f| %>
			<div class="auction-index-box">
				<div class="auction-index-image">
					<%if f.avatar[0] != nil%>
					<%= link_to (image_tag f.avatar[0],{id:'auction-index-image-size'}), f%>
					<%else%>
					<%= link_to (image_tag "https://s3-ap-southeast-1.amazonaws.com/stalfire/us_img_recipe_default_600x600.jpg",{id:"auction-index-image-size"}),f%>
					<%end%>
				</div>
				<p><%= f.title %></p>
			</div>
		<%end%>
	<div>
</div>
</body>